/* To learn more about this file see: https://angular.io/config/tsconfig. */
/*
  "stream" path is added to support "xml-js" library.
*/
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "paths": {
      "stream": [
        "node_modules/stream-browserify"
      ],
      "@annuadvent/ngx-common-ui": [
        "projects/ngx-common-ui"
      ],
      "@annuadvent/ngx-common-ui/*": [
        "projects/ngx-common-ui/*"
      ],
      "@annuadvent/ngx-core": [
        "projects/ngx-core"
      ],
      "@annuadvent/ngx-core/*": [
        "projects/ngx-core/*"
      ],
      "@annuadvent/ngx-tools": [
        "projects/ngx-tools"
      ],
      "@annuadvent/ngx-tools/*": [
        "projects/ngx-tools/*"
      ],
      "@annuadvent/ngx-cms": [
        "projects/ngx-cms"
      ],
      "@annuadvent/ngx-cms/*": [
        "projects/ngx-cms/*"
      ],
      "@annuadvent/ngx-lib-docs": [
        "projects/ngx-lib-docs"
      ],
      "@annuadvent/ngx-lib-docs/*": [
        "projects/ngx-lib-docs/*"
      ],
      "@annuadvent/ngx-ecommerce": [
        "projects/ngx-ecommerce"
      ],
      "@annuadvent/ngx-ecommerce/*": [
        "projects/ngx-ecommerce/*"
      ],
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
